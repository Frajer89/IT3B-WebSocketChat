<Window x:Class="IT3B_Chat.Server.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server Application" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Zprávy z klientů" FontWeight="Bold" FontSize="16" Margin="10" Grid.Row="0"/>
        <ListBox ItemsSource="{Binding Messages}" Margin="10" Grid.Row="0"/>

        <TextBlock Text="Akce připojení/odpojení klientů" FontWeight="Bold" FontSize="16" Margin="10" Grid.Row="2"/>
        <ListBox ItemsSource="{Binding Connections}" Margin="10" Grid.Row="2" />
    </Grid>
</Window>
