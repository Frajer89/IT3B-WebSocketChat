<Window x:Class="IT3B_Chat.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server Application" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Zprávy z klientů" FontWeight="Bold" FontSize="16" Margin="10" Grid.Row="0"/>
        <ListBox x:Name="MessagesListBox" Grid.Row="0" Margin="10" />

        <TextBlock Text="Akce připojení/odpojení klientů" FontWeight="Bold" FontSize="16" Margin="10" Grid.Row="2"/>
        <ListBox x:Name="ConnectionsListBox" Grid.Row="2" Margin="10" />
    </Grid>
</Window>
